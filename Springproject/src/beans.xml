<?xml version="1.0" encoding="UTF-8"?>
<beans 
xmlns="http://www.springframework.org/schema/beans" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns:p="http://www.springframework.org/schema/p" 
xsi:schemaLocation="http://www.springframework.org/schema/beans 
 http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"> 
 
 <bean id="hw" class="com.ex.Helloworld" scope="singleton" init-method="init" destroy-method="destroy">
 <property name="msg" value="Welcome to Spring"></property>
 </bean>

<bean id="c1" class="com.ex.Cat" scope="singleton">
<constructor-arg type="int" value="5"></constructor-arg> 
</bean>
<bean id="c2" class="com.ex.Cat" scope="">
<constructor-arg type="String" value="Tom"></constructor-arg>
</bean>
<bean id="c3" class="com.ex.Cat" scope="">
<constructor-arg type="int" value="3"></constructor-arg> 
<constructor-arg type="String" value="Kitty"></constructor-arg> 
</bean>
</beans>